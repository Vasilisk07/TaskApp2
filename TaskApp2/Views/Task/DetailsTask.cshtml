@model IEnumerable<TaskApp2.Models.CurentTaskModel>

@{
    ViewBag.Title = "DetailsTask";
}

<h3>@ViewBag.Task.TaskName   </h3>
<h5>@ViewBag.Task.TaskDescription   </h5>
<h5>@ViewBag.Task.TaskLeigth H  </h5>


