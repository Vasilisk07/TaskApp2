@model IEnumerable<TaskApp2.Models.UserViewModel>

@{
    ViewBag.Title = "Список зарегистрированых пользователей";
}

<h2>@ViewBag.Title</h2>


<table class="table">
    <tr>
        <th>
            User Name
        </th>
        <th>
             User Email
        </th>
        <th>
            Acces
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserRoles)
        </td>
        <td>
            @Html.ActionLink("Изменить тип доступа", "ListRole", new { userName = item.UserName }) |
            @Html.ActionLink("Удалить пользователя", "DeleteUser", new { userName = item.UserName })
        </td>
    </tr>
}

</table>
